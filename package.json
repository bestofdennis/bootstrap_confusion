{
  "name": "confusion",
  "version": "1.0.0",
  "description": "This is confusion directory.",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange 'css/*.scss' -- npm run scss",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
    "clean": "rimraf distri",
    "copyfonts": "copyfiles -f node_modeuls/font-awesome/fonts/* distri/fonts",
    "imagemin": "imagemin img/* --out-dir distri/img",
    "usemin": "usemin contactus.html -d distri -o distri/contactus.html --htmlmin true && usemin aboutus.html -d distri -o distri/aboutus.html --htmlmin true && usemin index.html -d distri -o distri/index.html --htmlmin true",
    "build": "npm run clean && npm run copyfonts && npm run imagemin && npm run usemin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bestofdennis/confusion.git"
  },
  "author": "siyuan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bestofdennis/confusion/issues"
  },
  "homepage": "https://github.com/bestofdennis/confusion#readme",
  "devDependencies": {
    "cssmin": "^0.4.3",
    "grunt": "^1.0.3",
    "grunt-browser-sync": "^2.2.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^3.0.2",
    "htmlmin": "0.0.7",
    "imagemin": "^6.0.0",
    "imagemin-cli": "^4.0.0",
    "jit-grunt": "^0.10.0",
    "lite-server": "^2.4.0",
    "node-sass": "^4.11.0",
    "onchange": "^5.1.2",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2",
    "time-grunt": "^1.4.0",
    "uglify-js": "^3.4.9",
    "usemin": "^0.5.0",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "bootstrap-social": "^5.1.1",
    "font-awesome": "^4.7.0",
    "gifsicle": "^4.0.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3"
  }
}
